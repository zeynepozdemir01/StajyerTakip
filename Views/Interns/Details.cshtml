@model StajyerTakip.Domain.Entities.Intern
@{
    ViewData["Title"] = "Stajyer Detay";
    var badge = (Model.Status == "Aktif") ? "success" : "secondary";
}

<h2 class="h4 mb-3"><i class="bi bi-person-badge me-2"></i>Stajyer Detay</h2>

<div class="card shadow-sm">
  <div class="card-body">
    <div class="row g-4">
      <div class="col-md-6">
        <dl class="row mb-0">
          <dt class="col-sm-4 text-muted">Ad Soyad</dt>
          <dd class="col-sm-8 fw-semibold">@Model.FirstName @Model.LastName</dd>

          <dt class="col-sm-4 text-muted">E-posta</dt>
          <dd class="col-sm-8">
            <a href="mailto:@Model.Email"><i class="bi bi-envelope me-1"></i>@Model.Email</a>
          </dd>

          <dt class="col-sm-4 text-muted">Telefon</dt>
          <dd class="col-sm-8">
            @if (!string.IsNullOrWhiteSpace(Model.Phone))
            {
              <a href="tel:@Model.Phone"><i class="bi bi-telephone me-1"></i>@Model.Phone</a>
            }
            else
            {
              <span class="text-muted">—</span>
            }
          </dd>

          <dt class="col-sm-4 text-muted">TC Kimlik</dt>
          <dd class="col-sm-8">@Model.NationalId</dd>
        </dl>
      </div>

      <div class="col-md-6">
        <dl class="row mb-0">
          <dt class="col-sm-4 text-muted">Okul</dt>
          <dd class="col-sm-8">@(!string.IsNullOrWhiteSpace(Model.School) ? Model.School : "—")</dd>

          <dt class="col-sm-4 text-muted">Bölüm</dt>
          <dd class="col-sm-8">@(!string.IsNullOrWhiteSpace(Model.Department) ? Model.Department : "—")</dd>

          <dt class="col-sm-4 text-muted">Başlangıç</dt>
          <dd class="col-sm-8">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

          <dt class="col-sm-4 text-muted">Bitiş</dt>
          <dd class="col-sm-8">@((Model.EndDate.HasValue ? Model.EndDate.Value.ToString("yyyy-MM-dd") : "—"))</dd>

          <dt class="col-sm-4 text-muted">Durum</dt>
          <dd class="col-sm-8">
            <span class="badge bg-@badge">@Model.Status</span>
          </dd>
        </dl>
      </div>
    </div>
  </div>

  <div class="card-footer bg-white d-flex justify-content-between">
    <a asp-action="Index" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left me-1"></i>Geri
    </a>
    <div class="d-flex gap-2">
      <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="bi bi-pencil-square me-1"></i>Düzenle
      </a>
      <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
        <i class="bi bi-trash me-1"></i>Sil
      </a>
    </div>
  </div>
</div>
