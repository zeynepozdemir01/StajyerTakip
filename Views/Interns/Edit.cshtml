@model StajyerTakip.Models.Intern
@{
    ViewData["Title"] = "Stajyer Düzenle";
    var currentStatus = Model?.Status ?? "Aktif";
    var isActive = currentStatus != "Pasif";
}

<h2 class="h4 mb-3"><i class="bi bi-pencil-square me-2"></i>Stajyer Düzenle</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" method="post" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label">Ad</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label">Soyad</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="NationalId" class="form-label">TC Kimlik No</label>
                    <input asp-for="NationalId" class="form-control" maxlength="11" />
                    <span asp-validation-for="NationalId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">E-posta</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Phone" class="form-label">Telefon</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                        <input asp-for="Phone" class="form-control" />
                    </div>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="School" class="form-label">Okul</label>
                    <input asp-for="School" class="form-control" />
                    <span asp-validation-for="School" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Department" class="form-label">Bölüm</label>
                    <input asp-for="Department" class="form-control" />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="StartDate" class="form-label">Başlangıç</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="EndDate" class="form-label">Bitiş</label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <label class="form-label d-block">Durum</label>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="statusSwitchEdit" @(isActive ? "checked" : "")>
                        <label class="form-check-label" id="statusLabelEdit" for="statusSwitchEdit">@currentStatus</label>
                    </div>
                    <input type="hidden" name="Status" id="statusHiddenEdit" value="@currentStatus" />
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Geri
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save2 me-1"></i>Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const sw = document.getElementById('statusSwitchEdit');
            const label = document.getElementById('statusLabelEdit');
            const hidden = document.getElementById('statusHiddenEdit');
            function sync() {
                const val = sw.checked ? 'Aktif' : 'Pasif';
                label.textContent = val;
                hidden.value = val;
            }
            sw.addEventListener('change', sync);
            sync();
        })();
    </script>
}
